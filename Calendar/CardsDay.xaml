<UserControl x:Class="Calendar.CardsDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Background="#FF5C5C5C">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="number" HorizontalAlignment="Center" Text="TextBlock" VerticalAlignment="Center" FontSize="16" />
        <Button Name="Button" Grid.Row="1" Grid.RowSpan="2" Background="Gray" BorderBrush="Gray" Click="Button_Click">
            <Image Source="\images\points.png" Grid.Row="1" Grid.RowSpan="2"/>
        </Button>
        


    </Grid>
</UserControl>
